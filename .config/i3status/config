# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should be sharp s: ÃŸ

general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "cpu_usage"
order += "tztime local"

wireless _first_ {
        format_up = "Wifi: %essid"
        format_down = ""
}

ethernet _first_ {
        format_up = "Ethernet: %ip (%speed)"
        format_down = ""
}

battery all {
        format = "Battery:%status %percentage"
        format_down = ""
        status_unk = ""
        status_bat = " ðŸ”‹"
        status_chr = " âš¡"
        status_full = " â˜»"
}

disk "/" {
        format = "Disk: %avail"
}

cpu_usage {
        format = "CPU: %usage"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
